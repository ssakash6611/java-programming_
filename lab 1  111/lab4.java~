import java.util.Scanner;
public class lab4
{
    public static void main(String[]args)
    {
        Scanner J=new Scanner(System.in);
        System.out.println("give me a number");
        int a=J.nextInt();
      
        for(int c=1;c<=a;c++)
        {
              {
                System.out.println();
              }
              for(int d=1;d<=a-1;d++)
              {
                {
                  System.out.println(" ");   
                }
                
                 for (int e=1;e<=c;e++)
                  { 
                    System.out.print("*");
                  }
            }
        }
}
}